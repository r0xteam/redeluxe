<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Color Indicator -->
            <View
                android:id="@+id/colorIndicator"
                android:layout_width="4dp"
                android:layout_height="32dp"
                android:background="@color/neon_cyan"
                android:layout_marginEnd="12dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ð·Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
            android:textStyle="bold"
                android:fontFamily="monospace"
                android:maxLines="1"
            android:ellipsize="end" />

            <!-- Pin Icon -->
            <ImageView
                android:id="@+id/pinIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_add"
                android:rotation="45"
                android:tint="@color/neon_pink"
                android:visibility="gone"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Content -->
        <TextView
            android:id="@+id/contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ÑÐ¾Ð´ÐµÑ€Ð¶Ð°Ð½Ð¸Ðµ Ð·Ð°Ð¼ÐµÑ‚ÐºÐ¸"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Category -->
            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ category"
                android:textColor="@color/neon_cyan"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:background="@drawable/note_background_cyan"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

            <!-- Spacer -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Date -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:fontFamily="monospace" />

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="12dp">

                <!-- Archive -->
                <ImageButton
                    android:id="@+id/archiveButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_save"
                    android:tint="@color/text_hint"
                    android:contentDescription="Ð°Ñ€Ñ…Ð¸Ð²"
                    android:padding="6dp" />

                <!-- More -->
                <ImageButton
                    android:id="@+id/moreButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_palette"
                    android:tint="@color/text_hint"
                    android:contentDescription="ÐµÑ‰Ðµ"
                    android:padding="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tags (if any) -->
        <HorizontalScrollView
            android:id="@+id/tagsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/tagsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView> 